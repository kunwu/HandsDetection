// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "electron-debug",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*$",
          "endsPattern": "^.*$"
        }
      }
    }
  ]
}